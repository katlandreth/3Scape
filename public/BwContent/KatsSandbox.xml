<?xml version="1.0" encoding="UTF-8"?>
<?bw onLoad="initialize"?>
<?bwinclude url="DefaultPreferences.xml"?>
<Scene>
    <Isolator name="Root">
        <PerspectiveCamera name="Camera" zoom="3.2" nearDistance=".1" farDistance="100000">
            <position x="0" y="2000" z="-9000"/>
            <rotation x="5" y="5" z="0"/>
        </PerspectiveCamera>
        <Group name="Lights">
            <GlobalIllumination name="GlobalLight">
                <ambient r=".8" g=".8" b=".8"/>
            </GlobalIllumination>
            <PointLight name="PointLight1" range="7000" >
                <ambient r="0.3" g="0.25" b="0.25"/>
                <diffuse r=".2" g=".15" b=".15"/>
                <specular r=".0" g=".0" b=".0"/>
                <position x="0" y="2000" z="-5000"/>
            </PointLight>
            <PointLight name="PointLight1" range="5000" >
                <ambient r="0.2" g="0.15" b="0.15"/>
                <diffuse r=".2" g=".15" b=".15"/>
                <specular r=".01" g=".01" b=".01"/>
                <position x="0" y="2000" z="-5000"/>
            </PointLight>
          
        </Group>
        <Group name="Models">
          
           <Model name="Dragon" url="objects/dragon.lwo" moveable="true" detectCollision="true">
                <color r=".355" g="0.05" b="0.05" a="1"/> 
                <scale x="200" y="200" z="200"/>
                <position x="462.24886730201865" y="2314.2637521958413" z="219.9159693817026"/>
                <rotation x="0" y="240" z="0"/>
            </Model>
            <Model name="Terrain" url="objects/Terrain.lwo" moveable="false" detectCollision="true" texturesEnabled="true">
                <position x="0" y="-1000" z="0"/>
                <physicalProperties>
                  <mass>0</mass>
                </physicalProperties>
            </Model>
        
            <Model name="Robot" url="Robot/objects/Robot.lwo" moveable="true" detectCollision="true" >
                <scale x="200" y="200" z="200"/>
                <position x= "-1291.1602947181157" y= "1291.2288444828253" z= "-1668.1757379175763"/>
                <rotation x="0" y="100" z="0"/>
            </Model>
            <Isolator name="ScreenCaptureIsolator" isolateTextures="true">
              <MediaTexture name="ScreenCaptureTexture"/>
              <ScreenRect name="ScreenCaptureRect" enabled="false"/>
            </Isolator>
        </Group>
    </Isolator>
    <RenderDirective name="RenderDirective" highlightType="2" backgroundImageFilename="images/sky.png" shadowsEnabled="false" texturesEnabled="true"/>
    <ConnectOutputs sourceEvaluator="SceneInspector" targetContainer="Camera" connectionType="sceneInspection"/>
    <PhysicsSimulator name="PhysicsSimulator" evaluate="true">
      <bodies>
        <body>Terrain</body>
      </bodies>
    </PhysicsSimulator>
    <Set target="ShadowDirective">
      <casterWorldPosition x="0" y="10" z="0"/>
    </Set>
</Scene>
