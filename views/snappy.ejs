			setTimeout(function(){
				var d = document, f = d.getElementsByTagName('script')[0], s = d.createElement('script'); s.type = 'text/javascript';
				s.async = true; s.src = '//s3.amazonaws.com/ki.js/57680/cPN.js'; f.parentNode.insertBefore(s, f);
			}, 1);
		})();
		</script>
		<div id="fb-root"></div><!-- FB Javascript SDK -->

		<div>
			<a for="Toolbar" class="h-button btn btn-info" data-toggle="collapse" href="#Toolbar" aria-expanded="true" aria-controls="Toolbar">
				<span class="glyphicon glyphicon-chevron-down"></span>
			</a>
			<div id="Toolbar" class="collapse in">
				<div class="row">
					<div class="col-md-1">
						<button data-toggle="dropdown" class="btn btn-default dropdown-toggle">
							<span class="shape glyphicon glyphicon-chevron-down" style="font-size:1.4em;" title="Click for actions"></span>
						</button>
						<ul class="dropdown-menu">
							<li>SHARE</li>
							<li class="divider"></li>
							<li>
								<span></span>
								<span class="shape fa fa-facebook fa-2x" title="Share a picture on Facebook" onclick=""></span>
								<span class="shape fa fa-twitter fa-2x" title="Share a picture on Twitter" onclick=""></span>
								<span class="shape fa fa-pinterest fa-2x" title="Share a picture on Pinterest" onclick=""></span>
								<span class="shape fa fa-instagram fa-2x" title="Share a picture on Instagram" onclick=""></span>
							</li>
							<li class="divider"></li>
							<li>GO-TO</li>
							<li class="divider"></li>
							<li>
								<a class="shape fa fa-user" href="profile" title="Change your settings. See your saved 3Scapes.">Your Profile</a>
							</li>
							<li><a class="shape fa fa-laptop" href="http://blog.3scape.me" title="Our latest updates, tips and tricks.">3Scape Blog</a></li>
							<li class="divider"></li>
							<li>3SCAPE ACTIONS</li>
							<li class="divider"></li>
							<li><a class="shape fa fa-arrows-alt" href="javascript:" title="Hide toolbars and extras. Hit ESC or click the exit button to exit full screen.">Full Screen</a></li>
							<li><a class="shape fa fa-plus" href="javascript:new3Scape();" title="Create a new 3Scape. This one will automatically be saved.">New 3Scape</a></li>
							<li class="divider"></li>
							<!--Loading the slides in the line below this, have to give how many slides you want loaded-->
							<li><a href="#" id="loadScene">Load Saved 3Scape</a></li>
						</ul>
					</div>
					<div class="col-md-11">
						<div class="tool-button icon-cube col-xs-1" onclick="loadModel('Cube.xml');">Cube</div>
						<div class="tool-button icon-pyramid col-xs-1" onclick="loadModel('Pyramid.xml');">Pyramid</div>
						<div class="tool-button icon-sphere col-xs-1" onclick="loadModel('Sphere.xml');">Sphere</div>
						<div class="tool-button icon-tube col-xs-1" onclick="loadModel('Tube.xml');">Tube</div>
						<div class="tool-button icon-gear col-xs-1" onclick="loadModel('Gear.xml');">Gear</div>
						<div class="tool-button icon-beam col-xs-1" onclick="loadModel('Beam.xml');">Beam</div>
						<div class="tool-button icon-wall col-xs-1" onclick="loadModel('Wall.xml');">Wall</div>
						<div class="tool-button icon-ring col-xs-1" onclick="loadModel('Ring.xml');">Ring</div>
						<div class="tool-button icon-elbow col-xs-1" onclick="loadModel('Elbow.xml');">Elbow</div>
						<div class="tool-button icon-wedge col-xs-1" onclick="loadModel('Wedge.xml');">Wedge</div>
						<div class="tool-button icon-plank col-xs-1" onclick="loadModel('Plank.xml');">Plank</div>
					</div>
				</div>
			</div>
		</div>

		<div id="ZoomControls">
			<span id="zoom-in" class="shape glyphicon glyphicon-zoom-in" style="font-size:4em" title="Zoom In"></span>
			<span id="zoom-out" class="shape glyphicon glyphicon-zoom-out" style="font-size:4em" title="Zoom Out"></span>
		</div>

		<div id="BwContainer" onclick="handleMouse(event);" onmousedown="handleMouse(event);" onmouseup="handleMouse(event);" onmousemove="handleMouse(event);" ondblclick="handleMouse(event);">
			<canvas id="Canvas">
			</canvas>
		</div>


		<div id="model-menu" class="menu">
			<div class="rotater">
				<div class="btn btn-icon" name="model-scale-item" style="background: rgba(255, 255, 255, 0);">
					<input id="model-scale-slider" data-slider-id='scale-slider' type="text"/>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" name="model-color-item">
					<i class="fa fa-paint-brush"></i>
					<input type="text" value="333" name="model-color" class="pick-a-color">
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon shape" onclick="roam();">
					<i class="fa fa-bolt"></i>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" onclick="cut();">
					<i class="fa fa-cut"></i>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" onclick="rotateRight();">
					<i class="fa fa-rotate-right"></i>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" onclick="rotateUp();">
					<i class="fa fa-arrow-up"></i>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" onclick="rotateDown();">
					<i class="fa fa-arrow-down"></i>
				</div>
			</div>
			<div class="rotater">
				<div class="btn btn-icon" onclick="rotateLeft();">
					<i class="fa fa-rotate-left"></i>
				</div>
			</div>
		</div>


		<script type="text/javascript">
			var bridgeworks = null;

			var modelMenu = document.querySelector("#model-menu");

			document.onreadystatechange = function () {
				if (document.readyState == "complete") {
					bridgeworks = init("grid-50.xml", document.getElementById("BwContainer"));

					onHoldFunction('#zoom-in', zoomIn, 20);
					onHoldFunction('#zoom-out', zoomOut, 20);

					addContextMenu();

				}
			}
		</script>

		<script type="text/javascript" src="js/contextmenu.js"></script>
		<script src="bower_components/pick-a-color/build/dependencies/tinycolor-0.9.15.min.js"></script>
		<script src="bower_components/pick-a-color/build/1.2.3/js/pick-a-color-1.2.3.min.js"></script>
	</body>
</html>
