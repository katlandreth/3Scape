<html>
	<head>
		<title>BWJS Demo</title>
		<script src="js/BwHelper.js"></script>
		<script type="text/javascript" src="js/Bridgeworks-min.js"></script>
		<script src="js/jquery-1.11.1.min.js"></script>
		<script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
		<link rel="stylesheet" type="text/css" href="css/snappy.css"/>
		<link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap.min.css"/>

		<script type="text/javascript">
			var bridgeworks = null;
		</script>
	</head>
	<body onresize="resize();">

		<div class="form-group">
			<a for="Toolbar" class="h-button btn btn-info" data-toggle="collapse" href="#Toolbar" aria-expanded="true" aria-controls="Toolbar"><span class="glyphicon glyphicon-chevron-down"></span></a>
			<div id="Toolbar" class="collapse">
				<div class="row">
					<div class="tool-button col-xs-1 col-xs-offset-1">1</div>
					<div class="tool-button col-xs-1">2</div>
					<div class="tool-button col-xs-1">3</div>
					<div class="tool-button col-xs-1">4</div>
					<div class="tool-button col-xs-1">5</div>
					<div class="tool-button col-xs-1">6</div>
					<div class="tool-button col-xs-1">7</div>
					<div class="tool-button col-xs-1">8</div>
				</div>
			</div>
		</div>

		<div id="BwContainer" onclick="bridgeworks.handleEvent(event);" onmousedown="bridgeworks.handleEvent(event);" onmouseup="bridgeworks.handleEvent(event);" onmousemove="bridgeworks.handleEvent(event);" >
			<canvas id="Canvas">
			</canvas>
		</div>

		<script type="text/javascript">
			document.onreadystatechange = function () {
				if (document.readyState == "complete") {
					bridgeworks = init("SnapTo.xml", document.getElementById("BwContainer"));
				}
			}

		</script>
	</body>
</html>
